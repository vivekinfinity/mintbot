{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "es2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*"]
      },
      "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
  }
  